<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/linechartview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAccessibility="auto"
            android:longClickable="false"
            android:nestedScrollingEnabled="true"
            android:textAlignment="viewStart"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Legend01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legend01" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_checkboxs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:orientation="vertical"></LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <Button
            android:id="@+id/btn_StartStopChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start" />

        <Button
            android:id="@+id/btn_ClearChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear" />

        <Button
            android:id="@+id/btn_ShowDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ShowDataBase"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_ClearDataBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ClearDataBase"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edt_distance"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_setTxPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set txPower" />

        <EditText
            android:id="@+id/edt_txPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-59" />

        <Button
            android:id="@+id/btn_setN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set n" />

        <EditText
            android:id="@+id/edt_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.3" />

        <Button
            android:id="@+id/btn_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test" />
    </LinearLayout>
</LinearLayout>